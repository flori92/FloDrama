{
  "name": "flodrama-frontend",
  "version": "1.0.0",
  "description": "Frontend FloDrama sur Cloudflare Pages",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "vite build && wrangler pages publish dist",
    "deploy:cloudflare": "bash scripts/deploy_to_cloudflare.sh",
    "test:resilience": "node scripts/test_resilience.js",
    "test:install-browsers": "npx playwright install chromium",
    "analyze:accessibility": "node scripts/improve_accessibility.js",
    "analyze:performance": "node scripts/optimize_performance.js",
    "enhance:accessibility": "node scripts/enhance_accessibility.js",
    "enhance:resilience": "node scripts/improve_resilience.js",
    "analyze:all": "npm run analyze:accessibility && npm run analyze:performance",
    "enhance:all": "npm run enhance:accessibility && npm run enhance:resilience"
  },
  "dependencies": {
    "framer-motion": "^12.9.7",
    "hls.js": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0"
  },
  "devDependencies": {
    "@babel/generator": "^7.27.1",
    "@babel/parser": "^7.27.2",
    "@babel/traverse": "^7.27.1",
    "@babel/types": "^7.27.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "typescript": "^5.1.3",
    "vite": "^6.3.5",
    "wrangler": "^4.14.1"
  }
}
