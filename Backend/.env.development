# Configuration du serveur
PORT=8080
NODE_ENV=development

# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/flodrama
MONGODB_USER=flodrama
MONGODB_PASSWORD=votre_mot_de_passe_securise

# Configuration Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=votre_mot_de_passe_redis

# Configuration JWT
JWT_SECRET=votre_secret_jwt_securise
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Configuration des logs
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Configuration du stockage des médias
MEDIA_STORAGE_PATH=./storage/media
MEDIA_MAX_SIZE=100000000 # 100MB

# Configuration des recommandations
RECOMMANDATION_CACHE_TTL=300 # 5 minutes
RECOMMANDATION_MAX_ITEMS=50
RECOMMANDATION_SCORE_THRESHOLD=0.5

# Configuration de la sécurité
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW=60000 # 1 minute
RATE_LIMIT_MAX=100 # requêtes par fenêtre
